<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sumant.iot.fortyninersense.FragGarage"
    android:tag="fr_garage">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp">

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Change Status"
            android:id="@+id/textView63"
            android:layout_row="0"
            android:layout_column="4"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1 Car Door"
            android:layout_gravity="center"
            android:id="@+id/textView53"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Status"
            android:id="@+id/textView62"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2 Car Door"
            android:layout_gravity="center"
            android:id="@+id/textView58"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    "
            android:id="@+id/textView52"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Closed"
            android:layout_gravity="center"
            android:id="@+id/textView1DoorStatus"
            android:layout_row="1"
            android:layout_column="2"
            android:textColor="@color/ArmedAway" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    "
            android:id="@+id/textView61"
            android:layout_row="1"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1DoorStatus"
            android:src="@drawable/ic_garage_door_closed"
            android:layout_row="1"
            android:layout_column="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Closed"
            android:layout_gravity="center"
            android:id="@+id/textView2DoorStatus"
            android:layout_row="2"
            android:layout_column="2"
            android:textColor="@color/ArmedAway" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2DoorStatus"
            android:src="@drawable/ic_garage_door_closed"
            android:layout_row="2"
            android:layout_column="4" />

    </GridLayout>
</RelativeLayout>
