<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lights">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@color/lights"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Living Room"
            android:layout_gravity="start|center"
            android:id="@+id/textViewChildLivingRoom"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <SeekBar
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarChildLivingRoom"
            android:enabled ="false"
            android:layout_row="1"
            android:layout_column="0" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildLivingRoom"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_light_off"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kitchen"
            android:layout_gravity="start|center"
            android:id="@+id/textViewChildKitchen"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildKitchen"
            android:src="@drawable/ic_light_off"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_gravity="center|left"
            android:layout_column="2" />

        <SeekBar
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarChildKitchen"
            android:enabled ="false"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Basement"
            android:layout_gravity="start|center"
            android:id="@+id/textViewChildBasement"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="               "
            android:id="@+id/textView15"
            android:layout_row="4"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildBasement"
            android:src="@drawable/ic_light_off"
            android:layout_row="4"
            android:layout_column="2" />

    </GridLayout>
</RelativeLayout>