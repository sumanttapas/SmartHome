<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sumant.iot.fortyninersense.FragThermostat"
    android:tag="fr_thermo">

    <!-- TODO: Update blank fragment layout -->


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/numberPickerTargetTemp"
        android:layout_alignStart="@+id/gridLayout3"
        android:layout_marginStart="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Floor  "
            android:id="@+id/textView35"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current"

            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="19sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="65"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textViewMainFloorCurrent"


            android:layout_row="1"
            android:layout_column="2"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="70"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textViewUpFloorCurrent"
            android:layout_row="1"
            android:layout_column="3"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature   "
            android:layout_gravity="start"
            android:textSize="15sp"
            android:id="@+id/textView11"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Up Floor"
            android:id="@+id/textViewCurrentTemp"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Target"
            android:id="@+id/textView13"

            android:layout_row="3"
            android:layout_column="0"
            android:textSize="19sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="89"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textViewMainTargetTemp"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="75"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textViewUpTargetTemp"
            android:layout_row="3"
            android:layout_column="3"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature"
            android:id="@+id/textView14"
            android:textSize="15sp"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/ThermoColorText" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Temperature"
        android:layout_marginLeft="10dp"
        android:id="@+id/buttonSetTemp"
        android:textColor="@color/ThermoColorText"

        android:layout_marginEnd="35dp"
        android:layout_below="@+id/checkBoxUpFloor"
        android:layout_alignEnd="@+id/gridLayout3" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerTargetTemp"

        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/gridLayout2" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/gridLayout3"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fan"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textView38"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewMainMode"
            android:src="@drawable/ic_snowflake"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mode"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textView37"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewUpMode"
            android:layout_row="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_snowflake"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewMainFan"
            android:layout_gravity="center"
            android:src="@drawable/ic_fan"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewUpFan"
            android:src="@drawable/ic_fan"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Up Floor"
            android:layout_gravity="center"
            android:id="@+id/textViewFan"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Floor"
            android:layout_gravity="center"
            android:id="@+id/textViewMainFloorMode"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Up Floor"
            android:layout_gravity="center"
            android:id="@+id/textView18"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Floor"
            android:id="@+id/textView36"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="15sp"
            android:textColor="@color/ThermoColorText" />

        <Spinner
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerMainFloorMode"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="0" />

        <Spinner
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerUpFloorMode"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="1" />

        <Spinner
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerMainFloorFan"
            android:layout_row="3"
            android:layout_column="2" />

        <Spinner
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerUpFloorFan"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="3" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout4"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignStart="@+id/buttonSetTemp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Outside  "
            android:id="@+id/textView12"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="19sp"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  60"
            android:id="@+id/textViewOutSideTemp"
            android:layout_rowSpan="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="@color/ThermoColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature"
            android:id="@+id/textView16"
            android:textSize="15sp"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@color/ThermoColorText" />

    </GridLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:id="@+id/checkBoxMainFloor"
        android:checked="false"
        android:textColor="@color/ThermoColorText"
        android:layout_below="@+id/gridLayout4"
        android:layout_alignLeft="@+id/buttonSetTemp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/checkBoxUpFloor"
        android:checked="false"
        android:textColor="@color/ThermoColorText"
        android:layout_below="@+id/gridLayout4"
        android:layout_alignEnd="@+id/gridLayout4" />

</RelativeLayout>
