<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/locks">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Garage Door"
            android:id="@+id/textView31"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Front Door"
            android:id="@+id/textView32"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildFront"
            android:src="@drawable/ic_keylocked_s"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back Door"
            android:id="@+id/textView33"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildLockBack"
            android:src="@drawable/ic_keylocked_s"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="           "
            android:id="@+id/textView34"
            android:layout_row="4"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildGarage"
            android:src="@drawable/ic_keylocked_s"
            android:layout_row="0"
            android:layout_column="2" />


    </GridLayout>
</RelativeLayout>