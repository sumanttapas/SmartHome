<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/thermo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current"
            android:id="@+id/textView17"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature"
            android:id="@+id/textView27"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Floor"
            android:id="@+id/textView21"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="18sp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   "
            android:id="@+id/textView70"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="65"
            android:id="@+id/textViewChildThermoCurTempMain"
            android:layout_row="2"
            android:layout_column="2"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  "
            android:id="@+id/textView71"
            android:layout_row="2"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="70"
            android:id="@+id/textViewChildThermoCurTempUp"
            android:layout_row="2"
            android:layout_column="4"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set"
            android:id="@+id/textView19"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="70"
            android:id="@+id/textViewChildThermoSetTempMain"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="70"
            android:id="@+id/textViewChildThermoSetTempUp"
            android:layout_row="3"
            android:layout_column="4"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Outside"
            android:id="@+id/textView20"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    "
            android:id="@+id/textView24"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="80"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:id="@+id/textViewChildThermoOutsideTemp"
            android:layout_row="4"
            android:layout_column="2"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="     "
            android:id="@+id/textView29"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fan Status"
            android:id="@+id/textView25"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="   "
            android:id="@+id/textView22"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="On"
            android:id="@+id/textViewChildThermoMainFan"
            android:layout_row="6"
            android:layout_column="2"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Auto"
            android:id="@+id/textViewChildThermoUpFan"
            android:layout_row="6"
            android:layout_column="4"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mode"
            android:id="@+id/textView26"
            android:layout_row="8"
            android:layout_gravity="start|center"
            android:layout_column="0"
            android:textColor="@color/abc_primary_text_material_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Up Floor"
            android:id="@+id/textView65"
            android:layout_row="0"
            android:layout_column="4"
            android:textSize="18sp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildThermoModeMainFloor"
            android:src="@drawable/ic_snowflake"
            android:layout_row="8"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChildThermoModeUpFloor"
            android:layout_row="8"
            android:src="@drawable/ic_snowflake"
            android:layout_column="4" />

    </GridLayout>
</RelativeLayout>